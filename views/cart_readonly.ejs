<!doctype html>
<html lang="en" data-ng-app="myApp">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://bootswatch.com/spacelab/bootstrap.min.css">
    <script type="text/javascript" src="../angular/angular.min.js"></script>
    <script src="../angular-route/angular-route.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="../javascripts/app.js"></script>
    <script type="text/javascript" src="../javascripts/signup.js"></script>
    <script type="text/javascript" src="../javascripts/login.js"></script>
    <script type="text/javascript" src="../javascripts/cart_readonly.js"></script>
    <script type="text/javascript" src="../javascripts/modules/promise-tracker.js"></script>
</head>
<body>
<% include navbar.ejs %>
<div class="container">
    <div class="jumbotron">
        <h1><%= title %></h1>
        <div ng-controller="ctrlReadOnly">
            <div id="messages" class="alert alert-success" data-ng-show="messages"
                 data-ng-bind="messages" ng-style="customStyle.style" ng-show="showMessage"></div>
            <table class="table table-striped table-condensed table-hover" ng-show="showCart">
                <tbody>
                <tr ng-repeat="shopping_cart_item in pagedItems[currentPage] | orderBy:sort.sortingOrder:sort.reverse">
                    <td>{{shopping_cart_item.qty}}</td>
                    <td>{{shopping_cart_item.name}}</td>
                    <td>{{shopping_cart_item.price}}</td>
                </tr>
                </tbody>
                <tfoot>
                <tr>
                    <td type="hidden"></td>
                    <td type="hidden"></td>
                    <td>Total: {{total}}</td>
                </tr>
                <td colspan="6">
                    <ul class="pagination pull-right">
                        <li ng-class="{disabled: currentPage == 0}">
                            <a href ng-click="prevPage()">« Prev</a>
                        </li>

                        <li ng-repeat="n in range(pagedItems.length, currentPage, currentPage + gap) "
                            ng-class="{active: n == currentPage}"
                            ng-click="setPage()">
                            <a href ng-bind="n + 1">1</a>
                        </li>

                        <li ng-class="{disabled: (currentPage) == pagedItems.length - 1}">
                            <a href ng-click="nextPage()">Next »</a>
                        </li>
                    </ul>
                </td>
                </tfoot>
            </table>
        </div>
    </div>
</div>
</body>
</html>